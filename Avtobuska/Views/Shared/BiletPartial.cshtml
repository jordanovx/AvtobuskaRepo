@model Avtobuska.Models.Bilet


@if(Model.Linija != null)
{


<form asp-controller="Home" asp-action="Rezerviraj" method="post">
    <div>
        Време на тргнување: @Model.Linija.VremeNaTrgnuvanje.ToString("HH:mm")
    </div>

    <div>
        Дестинација: @Model.Destinacija.Mesto.Name
    </div>

    <div>
        Тип на билет:
        @if (Model.Povraten)
        {
            <span>ПОВРАТЕН</span>
        }
        else
        {
            <span>НЕПОВРАТЕН </span>
        }
    </div>
    <div>
        Цена на билетот: @Model.Cena
    </div>

    <input asp-for="LinijaID" hidden />
    <input asp-for="Destinacija.ID"  hidden/>
    <input asp-for="Povraten" hidden />
    <input asp-for="Cena" hidden/>
    <div>
        <button type="submit" class="btn btn-default">Резервирај</button>
    </div>
</form>

}